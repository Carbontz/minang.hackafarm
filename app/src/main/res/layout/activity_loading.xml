<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_loading"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="reza.minang.hackafarm.Loading_Activity"
    android:background="@color/Background_Loading"
    android:weightSum="1">

    <ImageView
        app:srcCompat="@drawable/rangkiang"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:id="@+id/ivLoading"
        android:layout_marginBottom="50dp"
        android:layout_gravity="center"
        android:layout_weight="0.11"
        android:layout_width="150dp"
        android:layout_height="150dp"/>

    <TextView
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ivLoading"
        android:id="@+id/tvJudulLoading"
        android:gravity="center"
        android:textSize="40sp"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/background_dark"
        android:textStyle="normal|bold|italic"
        android:fontFamily="serif"
        android:elevation="0dp"/>

</LinearLayout>
